<%-include("layout")%>
    <h1>
        <%=title%>: <%=book.title%>
    </h1>

    <p>
        <%=book.summary%>
    </p>

    <% if(allCopies.length){ %>
        <p><strong>Delete the following copies of this book before attempting to delete this book.</strong></p>
        <div style="margin-left:20px;margin-top:20px">
            <h4>Copies</h4>
            <dl>
                <% allCopies.forEach((copy)=>{ %>
                    <dt><a href="<%=copy.url%>">
                            <%=copy.imprint%>
                        </a></dt>
                    <dd>
                        <%=copy.status%>
                    </dd>
                    <% }) %>
            </dl>

        </div>
        <% } else { %>
            <p>Do you really want to delete this Book?</p>
            <form action="" method="post">
                <div class="form-group">
                    <input type="hidden" id="bookid" class="form-control" name="bookid" value="<%=book._id%>">
                </div>
                <button type="submit" class="btn btn-primary">Delete</button>
            </form>
            <% } %>



                <%-include("footer")%>